    <pipeline name="Test_Chicago">
      <materials>
        <pipeline pipelineName="Deploy_to_Chicago" stageName="Deploy" />
      </materials>
      <stage name="Test_Application">
        <jobs>
          <job name="TestApplication">
            <tasks>
              <fetchartifact pipeline="Deploy_to_Chicago" stage="Deploy" job="Deploy" srcfile="deploy_output.json">
                <runif status="passed" />
              </fetchartifact>
              <exec command="cat">
                <arg>deploy_output.json</arg>
              </exec>
            </tasks>
          </job>
        </jobs>
