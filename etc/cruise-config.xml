  <pipelines group="Meghdoot">
    <pipeline name="Meghdoot-Test-App" template="meghdoot-test-app">
      <environmentvariables>
        <variable name="HEAT_STACK_NAME">
          <value>DeployTest</value>
        </variable>
        <variable name="OS_USERNAME" secure="true">
          <encryptedValue>HgZRLwi4GKY=</encryptedValue>
        </variable>
        <variable name="OS_PASSWORD" secure="true">
          <encryptedValue>0TdLzRZwsvkfacu8hDpqNQ==</encryptedValue>
        </variable>
        <variable name="OS_TENANTNAME" secure="true">
          <encryptedValue>HgZRLwi4GKY=</encryptedValue>
        </variable>
      </environmentvariables>
      <materials>
        <git url="https://github.com/asifrc/meghdoot-test-app.git" />
      </materials>
    </pipeline>
    <pipeline name="Application" isLocked="false">
      <materials>
        <git url="https://github.com/asifrc/meghdoot-test-app.git" dest="app" />
      </materials>
      <stage name="Build">
        <jobs>
          <job name="npmInstall">
            <tasks>
              <exec command="npm" workingdir="app">
                <arg>install</arg>
              </exec>
            </tasks>
            <artifacts>
              <artifact src="app" dest="app" />
              <artifact src="app/bin" dest="deployment" />
            </artifacts>
          </job>
        </jobs>
      </stage>
      <stage name="UnitTest">
        <jobs>
          <job name="MochaTest">
            <tasks>
              <exec command="grunt" workingdir="app">
                <arg>unit</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="FunctionalTest">
        <jobs>
          <job name="ProtractorTest">
            <tasks>
              <exec command="grunt" workingdir="app">
                <arg>angular</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
